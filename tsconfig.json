{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "baseUrl": ".", 
        "paths": {
            "@assets/*": ["assets/*"],
            "@resources/*": ["resources/*"],
            "@src/*": ["src/*"]
        }
    },
    "ts-node": {
        // these options are overrides used only by ts-node
        // same as the --compilerOptions flag and the TS_NODE_COMPILER_OPTIONS environment variable
        "compilerOptions": {
          "module": "commonjs"
        }
      },
}
